<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/sutoko_smsgame_background_notification_preview"
    tools:viewBindingIgnore="true">


    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="@dimen/background_notification_sms_radius"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/notification_preview.avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="ContentDescription" />


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#44FFFFFF" />

    </androidx.cardview.widget.CardView>

    <com.example.sutokosharedelements.fonts.RobotoBold
        android:id="@+id/notification.phrase.first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#010101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.sutokosharedelements.fonts.RobotoBold
        android:id="@+id/notification.phrase.third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/notification_call_to_action"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/notification.phrase.first" />

    <com.example.sutokosharedelements.fonts.RobotoRegular

        android:id="@+id/notification.phrase.second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#313131"

        app:layout_constraintBottom_toTopOf="@id/notification.phrase.third"
        app:layout_constraintStart_toStartOf="@id/notification.phrase.first"
        app:layout_constraintTop_toBottomOf="@id/notification.phrase.first" />

</androidx.constraintlayout.widget.ConstraintLayout>