<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#121212">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="18dp"
        android:orientation="vertical">

        <com.example.sutokosharedelements.fonts.WorkSansBold
            android:id="@+id/sutoko_inc_user_story_info_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/sutoko_inc_user_story_info_header_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sutoko_inc_user_story_info_header_author_avatar"
                android:layout_width="22dp"
                android:layout_height="22dp"
                tools:ignore="ContentDescription" />

            <com.example.sutokosharedelements.fonts.WorkSansLight
                android:id="@+id/sutoko_inc_user_story_info_header_author_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/sutoko_inc_user_story_info_header_report_button"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/sutoko_inc_user_story_info_header_like_button">

        <ImageView
            android:id="@+id/sutoko_inc_user_story_info_header_report_image"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="8dp"
            android:alpha="0.7"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/sutoko_inc_user_story_info_header_like_button"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sutoko_inc_user_story_info_header_like_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/animation_heart_like"
            tools:ignore="ContentDescription" />
    </FrameLayout>

</RelativeLayout>