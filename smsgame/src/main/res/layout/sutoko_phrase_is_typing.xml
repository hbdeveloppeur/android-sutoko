<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">


    <TextView
        android:id="@+id/sutoko.phrase.istyping.background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/background_rounded_phrase_is_typing"
        android:lineSpacingExtra="2dp"
        android:paddingStart="14dp"
        android:paddingLeft="14dp"
        android:paddingTop="10dp"
        android:paddingEnd="14dp"
        android:paddingRight="14dp"
        android:paddingBottom="10dp"
        android:text="b"
        android:textColor="#00000000"
        android:textSize="@dimen/sutoko_phrase_message_text_size"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="W, 2:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline87"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/guideline86"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/sutoko.phrase.istyping.animation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.phrase.istyping.background"
        app:layout_constraintDimensionRatio="W, 2:1"
        app:layout_constraintEnd_toEndOf="@id/sutoko.phrase.istyping.background"
        app:layout_constraintStart_toStartOf="@id/sutoko.phrase.istyping.background"
        app:layout_constraintTop_toTopOf="@id/sutoko.phrase.istyping.background"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/sutoko_phrase_is_typing_animation" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline86"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline87"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

</androidx.constraintlayout.widget.ConstraintLayout>