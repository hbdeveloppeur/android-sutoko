<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical|start"
        android:alpha="0.3"
        tools:ignore="ContentDescription" />

    <com.example.sharedelements.fonts.PoppinsBold
        android:id="@+id/realText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Secret choice"
        android:textSize="@dimen/sutoko_choice_text_font"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/secretLayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:background="@drawable/sutoko_smsgame_secretchoice_price_background"
            android:paddingStart="10dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:paddingBottom="3dp">

            <com.example.sharedelements.fonts.PoppinsBold
                android:id="@+id/secretLayoutDiamondsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF" />

            <ImageView
                android:id="@+id/secretLayerDiamond"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="3dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <com.example.sharedelements.fonts.PoppinsBold
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/sutoko_secret_choice"
            android:textSize="@dimen/sutoko_choice_text_font" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="12dp"
        android:visibility="invisible" />
</FrameLayout>