<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/phrase.notification.image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/guideline21"
        app:layout_constraintDimensionRatio="1:1"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".8"/>

    <TextView
        android:id="@+id/phrase.notification.text"
        android:textSize="@dimen/phrase_dest_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/friendzone3_layout_bg_rounded_notif"
        android:paddingBottom="@dimen/phrase_dest_text_paddingVertical"
        android:paddingEnd="@dimen/phrase_dest_text_paddingHorizontal"
        android:paddingLeft="@dimen/phrase_dest_text_paddingHorizontal"
        android:paddingRight="@dimen/phrase_dest_text_paddingHorizontal"
        android:paddingStart="@dimen/phrase_dest_text_paddingHorizontal"
        android:paddingTop="@dimen/phrase_dest_text_paddingVertical"
        android:text="@string/phrase_notification_first_sentence"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/phrase.notification.image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/guideline21"
        app:layout_constraintTop_toTopOf="@id/phrase.notification.image"
        app:layout_constrainedWidth="true" />



</androidx.constraintlayout.widget.ConstraintLayout>