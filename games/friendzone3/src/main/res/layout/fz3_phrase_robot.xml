<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <TextView
        android:id="@+id/phrase.robot.gt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingLeft="0dp"
        android:paddingEnd="@dimen/phrase_robot_text_padding_right"
        android:paddingRight="@dimen/phrase_robot_text_padding_right"
        android:text="@string/greater_than"
        android:textColor="@color/robot"
        android:textSize="@dimen/phrase_info_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/phrase.robot.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/phrase_robot_text_margin_horizontal"
        android:layout_marginLeft="@dimen/phrase_robot_text_margin_horizontal"
        android:layout_marginTop="@dimen/phrase_robot_text_margin_vertical"
        android:layout_marginEnd="@dimen/phrase_robot_text_margin_horizontal"
        android:layout_marginRight="@dimen/phrase_robot_text_margin_horizontal"
        android:layout_marginBottom="@dimen/phrase_robot_text_margin_vertical"
        android:letterSpacing=".02"
        android:textColor="@color/robot"
        android:textSize="@dimen/phrase_robot_text"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/phrase.robot.gt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>