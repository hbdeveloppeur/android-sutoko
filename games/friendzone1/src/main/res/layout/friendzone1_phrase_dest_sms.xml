<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/phrase.dest.background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/phrase_dest_paddingLeft"
        android:layout_marginStart="@dimen/phrase_dest_paddingLeft"
        android:background="@drawable/layout_bg_roundedsms"
        android:paddingBottom="@dimen/phrase_dest_compensation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline26"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constrainedWidth="true">

        <purpletear.fr.purpleteartools.fonts.OldPtSans
            android:id="@+id/phrase.dest.text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/phrase_dest_text_paddingVertical"
            android:paddingEnd="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingLeft="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingRight="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingStart="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingTop="@dimen/phrase_dest_text_paddingVertical"
            android:textSize="@dimen/phrase_dest_text" />
    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".67" />
</androidx.constraintlayout.widget.ConstraintLayout>