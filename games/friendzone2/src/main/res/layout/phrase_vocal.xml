<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/phrase.vocal.background"
        android:background="@drawable/layout_bg_roundedtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/phrase_dest_paddingLeft"
        android:layout_marginStart="@dimen/phrase_dest_paddingLeft"
        android:paddingBottom="@dimen/phrase_dest_compensation"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/phrase_dest_text_paddingVertical"
            android:paddingEnd="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingLeft="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingRight="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingStart="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingTop="@dimen/phrase_dest_text_paddingVertical"
            android:text="bonjour"
            android:textSize="@dimen/phrase_dest_text"
            android:visibility="invisible"
            tools:ignore="HardcodedText" />
    </FrameLayout>

    <ImageView
        android:id="@+id/phrase.vocal.profil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/vocal_guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/phrase.vocal.button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintBottom_toBottomOf="@id/phrase.vocal.background"
        app:layout_constraintDimensionRatio="W, 14:7"
        app:layout_constraintStart_toStartOf="@id/phrase.vocal.background"
        app:layout_constraintEnd_toEndOf="@id/phrase.vocal.background"
        app:layout_constraintTop_toTopOf="@id/phrase.vocal.background"
        tools:ignore="ContentDescription" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vocal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>