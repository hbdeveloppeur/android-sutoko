<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/mainactivity.choicebox.area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AA000000"
    android:clickable="true"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/main_guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bg_rounded_white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/main_guideline3"
        app:layout_constraintRight_toRightOf="@id/main_guideline4"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <purpletear.fr.purpleteartools.fonts.OldPtSans
            android:id="@+id/choicebox.text.counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1983e6"
            app:layout_constraintBottom_toBottomOf="@id/choicebox.title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/choicebox.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/choicebox_title_paddingLeft"
            android:paddingLeft="@dimen/choicebox_title_paddingLeft"
            android:paddingTop="@dimen/choicebox_title_paddingTop"
            android:paddingEnd="@dimen/choicebox_title_paddingRight"
            android:paddingRight="@dimen/choicebox_title_paddingRight"
            android:paddingBottom="@dimen/choicebox_title_paddingBottom"
            android:text="@string/game_your_choice"
            android:textColor="@color/beauty"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="@dimen/choicebox_title_font"
            android:textStyle="bold" />

        <View
            android:id="@+id/choicebox.separator"
            app:layout_constraintTop_toBottomOf="@id/choicebox.title"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20000000" />

        <View
            android:id="@+id/choicebox.progressbar"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#1e8cf2"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/choicebox.title" />

        <LinearLayout
            android:id="@+id/mainactivity.choicebox.parent"
            app:layout_constraintTop_toBottomOf="@id/choicebox.title"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/choicebox_title_paddingTop" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>