<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/phone.smsscreen.background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <include
        android:id="@+id/phone.statusbar"
        layout="@layout/inc_phone_statusbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/phone.smsscreen.toparea"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#19ffffff"
        app:layout_constraintTop_toBottomOf="@id/phone.statusbar" />

    <ImageView
        android:id="@+id/phone.smsscreen.button.back.image"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="@id/phone.smsscreen.toparea"
        app:layout_constraintDimensionRatio="W, 150:115"
        app:layout_constraintStart_toStartOf="@id/phone.smsscreen.toparea"
        app:layout_constraintTop_toTopOf="@id/phone.smsscreen.toparea"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/phone.smsscreen.button.back.button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/phone.smsscreen.toparea"
        app:layout_constraintEnd_toEndOf="@id/phone.smsscreen.button.back.image"
        app:layout_constraintStart_toStartOf="@id/phone.smsscreen.toparea"
        app:layout_constraintTop_toTopOf="@id/phone.smsscreen.toparea" />

    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.klomobile"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.toparea" />
    <!-- End Row -->
    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.christophe"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.klomobile" />
    <!-- End Row -->
    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.zoe"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.christophe" />
    <!-- End Row -->
    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.sylvie"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.zoe" />
    <!-- End Row -->
    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.lucie"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.sylvie" />
    <!-- End Row -->
    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.bryan"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.lucie" />
    <!-- End Row -->
    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.other1"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.bryan" />
    <!-- End Row -->
    <!-- Row -->
    <include
        android:id="@+id/phone.smsscreen.preview.other2"
        layout="@layout/inc_sms_row_"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.other1" />
    <!-- End Row -->

    <View
        android:id="@+id/phone.smsscreen.bottomarea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:background="#42000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.preview.other2" />

    <purpletear.fr.purpleteartools.fonts.OldPtSans
        android:id="@+id/phone.smsscreen.currentconversation.name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/alias_christophe"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/phone.smsscreen.toparea"
        app:layout_constraintEnd_toEndOf="@id/phone.smsscreen.toparea"
        app:layout_constraintStart_toStartOf="@id/phone.smsscreen.toparea"
        app:layout_constraintTop_toTopOf="@id/phone.smsscreen.toparea"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/phone.smsscreen.currentconversation.image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@id/phone.smsscreen.currentconversation.name"
        app:layout_constraintDimensionRatio="W, 1:1"
        app:layout_constraintEnd_toEndOf="@id/phone.smsscreen.toparea"
        app:layout_constraintStart_toStartOf="@id/phone.smsscreen.toparea"
        app:layout_constraintTop_toTopOf="@id/phone.smsscreen.toparea"
        tools:ignore="ContentDescription" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/phone.smsscreen.recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone.smsscreen.toparea" />

</androidx.constraintlayout.widget.ConstraintLayout>
