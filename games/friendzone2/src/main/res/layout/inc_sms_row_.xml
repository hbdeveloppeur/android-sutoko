<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/preview.background"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#42000000"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/preview.avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@id/preview.background"
        app:layout_constraintDimensionRatio="W, 1:1"
        app:layout_constraintStart_toStartOf="@id/preview.background"
        app:layout_constraintTop_toTopOf="@id/preview.background"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/preview.name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/preview.background"
        app:layout_constraintStart_toEndOf="@id/preview.avatar"
        app:layout_constraintTop_toTopOf="@id/preview.background"
        app:layout_constraintVertical_bias="0.25"
        />

    <TextView
        android:id="@+id/preview.message_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/preview.background"
        app:layout_constraintStart_toStartOf="@id/preview.name"
        app:layout_constraintTop_toBottomOf="@id/preview.name"
        app:layout_constraintVertical_bias="0.2"
        />

    <TextView
        android:id="@+id/preview.date.background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66e73310"
        android:gravity="center"
        android:text="@string/_1_an"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/preview.background"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/preview.background"
        app:layout_constraintTop_toTopOf="@id/preview.background"
        />
</androidx.constraintlayout.widget.ConstraintLayout>