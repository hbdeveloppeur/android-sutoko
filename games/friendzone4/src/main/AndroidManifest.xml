<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".Main"
        android:allowBackup="true"
        android:supportsRtl="true"
        tools:replace="android:name"
        tools:ignore="GoogleAppIndexingWarning">
        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity
            android:name=".game.activities.splash.SplashActivity"
            android:launchMode="singleTop"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
        </activity>
        <activity
            android:name=".game.activities.menu.Menu"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/MenuTheme">
        </activity>

        <activity
            android:name=".game.activities.load.Load"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".game.activities.main.Main"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".game.activities.audiocinematic.AudioCinematic"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".game.activities.textcinematic.TextCinematic"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".game.activities.loading.Loading"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".game.activities.hacking.HackingGame"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme"/>

        <activity
            android:name=".game.activities.phonecall.PhoneCall"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" />

        <activity
            android:name=".game.activities.poetry.Poetry"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" />
        <activity
            android:name=".game.activities.end.End"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme" >
        </activity>
    </application>

</manifest>