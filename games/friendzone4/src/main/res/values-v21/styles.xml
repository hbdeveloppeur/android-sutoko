<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/main_header_darker</item>
    </style>

    <style name="MainChatTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/chat_main_header_pinkyred</item>
    </style>

    <style name="ChatConnexionTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:statusBarColor">#33151e</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
    </style>
</resources>