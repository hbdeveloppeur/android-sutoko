<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fz4_gif_phrase.gif.image"
        android:layout_width="0dp"
        app:layout_constraintDimensionRatio="H, 300:197"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fz4_gif_guideline25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/fz4_gif_phrase.gif.profil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/fz4_gif_guideline"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription"/>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fz4_gif_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fz4_gif_guideline25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".55"/>
</androidx.constraintlayout.widget.ConstraintLayout>