<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/fz4_phrase.seen.background"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/phrase_dest_paddingLeft"
        android:layout_marginEnd="@dimen/phrase_dest_paddingLeft"
        android:layout_marginStart="@dimen/phrase_me_marginleft"
        android:layout_marginLeft="@dimen/phrase_me_marginleft"
        android:background="@drawable/fz4_layout_bg_roundedtest"
        android:paddingBottom="@dimen/phrase_dest_compensation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constrainedWidth="true">

        <purpletear.fr.purpleteartools.fonts.OldPtSans
            android:id="@+id/fz4_phrase.seen.text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/phrase_dest_text_paddingVertical"
            android:paddingEnd="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingLeft="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingRight="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingStart="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingTop="@dimen/phrase_dest_text_paddingVertical"
            android:textSize="@dimen/phrase_dest_text" />
    </FrameLayout>

    <ImageView
        android:id="@+id/fz4_phrase.seen.anim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:paddingEnd="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingStart="4dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toEndOf="@id/fz4_guideline12"
        app:layout_constraintStart_toStartOf="@id/fz4_guideline14"
        app:layout_constraintTop_toBottomOf="@id/fz4_phrase.seen.background"
        tools:ignore="ContentDescription" />

    <purpletear.fr.purpleteartools.fonts.OldPtSans
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/phrase_info_text"
        app:layout_constraintTop_toTopOf="@id/fz4_phrase.seen.anim"
        app:layout_constraintBottom_toBottomOf="@id/fz4_phrase.seen.anim"
        app:layout_constraintEnd_toStartOf="@id/fz4_phrase.seen.anim"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/seen" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fz4_guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fz4_guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />
</androidx.constraintlayout.widget.ConstraintLayout>