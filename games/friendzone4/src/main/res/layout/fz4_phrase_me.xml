<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fz4_phrase.me.background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fz4_layout_bg_roundedtest"
        android:paddingBottom="@dimen/phrase_dest_compensation"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/fz4_guideline35"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/fz4_guideline64"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <purpletear.fr.purpleteartools.fonts.OldPtSans
            android:id="@+id/fz4_phrase.me.text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingLeft="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingTop="@dimen/phrase_dest_text_paddingVertical"
            android:paddingEnd="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingRight="@dimen/phrase_dest_text_paddingHorizontal"
            android:paddingBottom="@dimen/phrase_dest_text_paddingVertical"
            android:textSize="@dimen/phrase_dest_text"
            tools:text="123" />
    </FrameLayout>

    <ImageView
        android:id="@+id/fz4_phrase.me.seen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/fz4_phrase.me.background"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintStart_toEndOf="@id/fz4_guideline34"
        app:layout_constraintEnd_toEndOf="@id/fz4_phrase.me.background"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <purpletear.fr.purpleteartools.fonts.OldPtSans
        android:id="@+id/fz4_phrase.me.seen.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/fz4_phrase.me.seen"
        app:layout_constraintBottom_toBottomOf="@id/fz4_phrase.me.seen"
        app:layout_constraintEnd_toStartOf="@id/fz4_phrase.me.seen"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/seen"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/phrase_info_text" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fz4_guideline64"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fz4_guideline35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fz4_guideline34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".90" />
</androidx.constraintlayout.widget.ConstraintLayout>