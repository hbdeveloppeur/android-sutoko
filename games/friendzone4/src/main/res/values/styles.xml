<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/main_header_darker</item>
    </style>

    <style name="MainChatTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/chat_main_header_pinkyred</item>
    </style>

    <style name="ChatConnexionTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">#c37b91</item>
    </style>

    <style name="GamesTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionMenuTextAppearance">@style/menu_text_style</item>
    </style>

    <style name="menu_text_style" parent="Theme.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="chat_my_profil_edittext" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">#f45454</item>
        <item name="colorControlActivated">#f45454</item>
        <item name="colorControlHighlight">#f45454</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
