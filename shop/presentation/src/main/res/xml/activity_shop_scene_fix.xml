<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">


    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:motionInterpolator="easeInOut">

        <OnSwipe
            motion:touchAnchorId="@+id/sutoko_shop_scrollview"
            motion:dragDirection="dragUp" />
    </Transition>


    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/sutoko_shop_background_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:alpha="0"
            />
        <Constraint
            android:id="@+id/buyValidation"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            motion:visibilityMode="ignore"
            />
        <Constraint
            android:id="@+id/sutoko_shop_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/guideline150"
            motion:layout_constraintVertical_bias="1"/>
        <Constraint
            android:id="@+id/sutoko_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Packs de story coins"
            android:textAllCaps="true"
            android:textColor="#feffff"
            android:textSize="22sp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/sutoko_shop_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxWidth="300dp"
            android:text="Ne faites plus durer le suspense, continuez l’histoire"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#f4f4f4"
            android:textSize="14sp"
            motion:layout_constrainedWidth="true"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/sutoko_shop_title"
            android:alpha="1" />
        <Constraint
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/sutoko_shop_background_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000"
            android:alpha="0.3"
            />

        <Constraint
            android:id="@+id/buyValidation"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            motion:visibilityMode="ignore"
            />
        <Constraint

            android:id="@+id/sutoko_shop_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintVertical_bias="1"/>
        <Constraint
            android:id="@+id/sutoko_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Packs de story coins"
            android:textAllCaps="true"
            android:textColor="#feffff"
            android:textSize="22sp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:alpha="1"/>
        <Constraint
            android:id="@+id/sutoko_shop_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:maxWidth="300dp"
            android:text="Ne faites plus durer le suspense, continuez l’histoire"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#f4f4f4"
            android:textSize="14sp"
            motion:layout_constrainedWidth="true"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/sutoko_shop_title"
            android:alpha="1" />
    </ConstraintSet>

</MotionScene>