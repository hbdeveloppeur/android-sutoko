<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingTop="12dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp"
    android:background="@drawable/background_button_yellow">

    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp" >
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sutoko_coins_button_earn_animation"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/coin_animation" />
    </FrameLayout>

    <com.example.sutokosharedelements.fonts.PoppinsBold
        android:id="@+id/sutoko_coins_button_earn_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/darkModeWhite"
        android:text="+50"
        android:layout_marginTop="6dp"
        />

</LinearLayout>