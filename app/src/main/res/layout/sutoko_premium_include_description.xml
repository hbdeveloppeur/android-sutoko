<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:viewBindingIgnore="true">

    <com.example.sutokosharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.premium.description.number"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/background_circle_number_premium_listing"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <purpletear.fr.purpleteartools.WrapWidthTextView
        android:id="@+id/sutoko.premium.description.sentence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:includeFontPadding="false"
        android:letterSpacing="0.09"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        tools:ignore="UnusedAttribute" />
</LinearLayout>