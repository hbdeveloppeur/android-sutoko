<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="@drawable/background_rounded_vsoft_rank_players"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sutoko_item_community_players_rank_animation_stars"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:lottie_rawRes="@raw/sutoko_animation_stars"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_speed="0.6"
            />
        <View
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/background_rounded_soft_white"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/sutoko_item_community_players_rank_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            />
    </FrameLayout>

    <com.example.sutokosharedelements.fonts.NunitoBold
        android:id="@+id/sutoko_item_community_players_rank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:layout_marginTop="-10dp"
        />

    <com.example.sutokosharedelements.fonts.NunitoBold
        android:id="@+id/sutoko_item_community_players_rank_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#A3A3A3"
        android:layout_gravity="center"
        android:textSize="11sp"
        android:layout_marginTop="4dp"
        />
</LinearLayout>