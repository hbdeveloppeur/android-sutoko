<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:viewBindingIgnore="true">

    <ProgressBar
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.premium.card"
        app:layout_constraintEnd_toEndOf="@id/sutoko.premium.card" />

    <androidx.cardview.widget.CardView
        android:id="@+id/sutoko.premium.card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="0dp"
        app:cardBackgroundColor="#00000000"
        app:cardCornerRadius="32dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <ImageView
            android:id="@+id/sutoko.premium.card.background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#5CFFFFFF"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/sutoko.premium.card.text.label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:background="@drawable/background_rounded_premium_card_label"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:textAllCaps="true"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/sutoko.premium.card"
        app:layout_constraintTop_toTopOf="@id/sutoko.premium.card"
        tools:ignore="UnusedAttribute" />

    <com.example.sharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.premium.card.text.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:letterSpacing="0.06"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.premium.card"
        app:layout_constraintStart_toStartOf="@id/sutoko.premium.card" />

</androidx.constraintlayout.widget.ConstraintLayout>