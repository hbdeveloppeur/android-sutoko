<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_account_creation_background"
    tools:context=".screens.accountCreation.AccountCreation"
    tools:viewBindingIgnore="true">

    <ImageView
        android:id="@+id/sutoko.account.creation.images.foreground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 360:261"
        app:layout_constraintEnd_toEndOf="@id/guideline57"
        app:layout_constraintStart_toStartOf="@id/guideline56"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/sutoko.account_creation.image.characters"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.16"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H, 200:217"
        app:layout_constraintEnd_toEndOf="@id/guideline57"
        app:layout_constraintStart_toStartOf="@id/guideline56"
        tools:ignore="ContentDescription" />

    <ProgressBar
        android:id="@+id/account_creation.image.avatar.progressbar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/account_creation.image.avatar"
        app:layout_constraintStart_toStartOf="@id/account_creation.image.avatar"
        app:layout_constraintEnd_toEndOf="@id/account_creation.image.avatar"
        app:layout_constraintBottom_toBottomOf="@id/account_creation.image.avatar"
        />

    <ImageView
        android:id="@+id/account_creation.image.avatar"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/account_creation.image.description"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        tools:ignore="ContentDescription" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#39000000" />

    <com.example.sharedelements.fonts.RobotoRegular
        android:id="@+id/account_creation.text.form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/sutoko_account_creation_introduce_title"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/account_creation.form"
        app:layout_constraintEnd_toStartOf="@id/guideline59"
        app:layout_constraintStart_toEndOf="@id/guideline58"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <LinearLayout
        android:id="@+id/account_creation.image.description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline57"
        app:layout_constraintStart_toEndOf="@id/guideline56"
        app:layout_constraintTop_toTopOf="parent">

        <com.example.sharedelements.fonts.RobotoRegular
            android:id="@+id/account_creation.text.upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:letterSpacing="0.09"
            android:text="@string/creation_account_avatar_upload_title"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20sp"
            app:layout_constraintVertical_bias="0.6"
            tools:ignore="UnusedAttribute" />

        <com.example.sharedelements.fonts.RobotoRegular
            android:id="@+id/account_creation.text.upload.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:letterSpacing="0.09"
            android:text="@string/creation_account_avatar_upload_subtitle"
            android:textAlignment="center"
            android:textColor="#D6D6D6"
            android:textSize="18sp"
            app:layout_constraintVertical_bias="0.6"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

    <View
        android:id="@+id/account_creation.patron.1"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/account_creation.patron.2"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.example.sharedelements.fonts.RobotoBold
        android:id="@+id/account_creation.button.next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_button_swhite_account_creation_button"
        android:gravity="center"
        android:letterSpacing="0.1"
        android:text="@string/sutoko_continue"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/account_creation.patron.1"
        app:layout_constraintDimensionRatio="H, 883:177"
        app:layout_constraintEnd_toStartOf="@id/account_creation.patron.2"
        app:layout_constraintStart_toEndOf="@id/account_creation.patron.1"
        tools:ignore="UnusedAttribute" />

    <View
        android:id="@+id/sutoko.account.creation.button.loader.patron"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/account_creation.button.next"
        app:layout_constraintDimensionRatio="W, 1:1"
        app:layout_constraintEnd_toEndOf="@+id/account_creation.button.next"
        app:layout_constraintTop_toTopOf="@+id/account_creation.button.next" />

    <ProgressBar
        android:id="@+id/sutoko.account.creation.button.loader"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/sutoko.account.creation.button.loader.patron"
        app:layout_constraintEnd_toEndOf="@+id/sutoko.account.creation.button.loader.patron"
        app:layout_constraintStart_toStartOf="@+id/sutoko.account.creation.button.loader.patron"
        app:layout_constraintTop_toTopOf="@+id/sutoko.account.creation.button.loader.patron" />


    <com.example.sharedelements.fonts.RobotoRegular
        android:id="@+id/account_creation.introduction.text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="10dp"
        android:text="@string/story_creation_text"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="19sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline57"
        app:layout_constraintStart_toEndOf="@id/guideline56"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44"
        tools:ignore="UnusedAttribute" />

    <com.example.sharedelements.fonts.RobotoRegular
        android:id="@+id/account_creation.introduction.subtext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:letterSpacing="0.08"
        android:lineSpacingExtra="10dp"
        android:text="@string/sutoko_account_creation_introduce_subtitle"
        android:textAlignment="center"
        android:textColor="#C5C5C5"
        android:textSize="17sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/guideline57"
        app:layout_constraintStart_toEndOf="@id/guideline56"
        app:layout_constraintTop_toBottomOf="@+id/account_creation.introduction.text"
        tools:ignore="UnusedAttribute" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline57"
        app:layout_constraintStart_toStartOf="@+id/guideline56"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/account_creation.mail_validation.animation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            app:layout_constraintVertical_bias="0.3"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/email_confirmation_sent" />

        <com.example.sharedelements.fonts.RobotoRegular
            android:id="@+id/account_creation.mail_validation.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:text="@string/sutoko_account_created"
            android:textAlignment="center"
            android:textColor="#CCCCCC"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constrainedWidth="true" />

        <com.example.sharedelements.fonts.RobotoRegular
            android:id="@+id/account_creation.mail_validation.description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="6dp"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constrainedWidth="true" />

    </LinearLayout>

    <ImageView
        android:id="@+id/account_creation.introduction.icon.success"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/account_creation.introduction.text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/account_creation.form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/account_creation.button.next"
        app:layout_constraintEnd_toStartOf="@id/guideline57"
        app:layout_constraintStart_toEndOf="@id/guideline56"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sutoko.account.creation.form.nickname.parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#D7D7D7"
            android:hint="@string/your_nickname"
            android:theme="@style/TextInputLayoutStyle"
            app:errorTextAppearance="@style/TextInputLayoutErrorAppearance">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sutoko.account.creation.form.nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:drawablePadding="20dp"
                android:inputType="textNoSuggestions"
                android:letterSpacing="0.09"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="22dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="16dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                tools:ignore="UnusedAttribute" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sutoko.account.creation.form.mail.parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:hint="@string/your_mail_address"
            android:textColorHint="#ACACAC"
            android:theme="@style/TextInputLayoutStyle"
            app:errorTextAppearance="@style/TextInputLayoutErrorAppearance">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sutoko.account.creation.form.mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:drawablePadding="20dp"
                android:inputType="textNoSuggestions"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="22dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sutoko.account.creation.form.birthday.parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:textColorHint="#ACACAC"
            android:hint="@string/sutoko_form_birthday"
            android:theme="@style/TextInputLayoutStyle"
            app:errorTextAppearance="@style/TextInputLayoutErrorAppearance">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sutoko.account.creation.form.birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:drawablePadding="20dp"
                android:inputType="date"
                android:paddingStart="12dp"
                android:paddingLeft="12dp"
                android:paddingTop="22dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sutoko.account.creation.form.password.parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_password"
            android:textColorHint="#ACACAC"
            android:theme="@style/TextInputLayoutStyle"
            app:endIconMode="password_toggle"
            app:errorTextAppearance="@style/TextInputLayoutErrorAppearance">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sutoko.account.creation.form.password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="22dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sutoko.account.creation.form.password_confirmation.parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_password"
            android:textColorHint="#ACACAC"
            android:theme="@style/TextInputLayoutStyle"
            app:endIconMode="password_toggle"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextInputLayoutErrorAppearance">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sutoko.account.creation.form.password_confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:drawablePadding="20dp"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="22dp"
                android:paddingBottom="14dp"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/sutoko.account.creation.form.checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:letterSpacing="0.09"
                android:lineSpacingExtra="4dp"
                android:padding="7dp"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/sutoko.account.creation.form.checkbox.text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/cgu" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_connexion.form"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/account_creation.button.next"
        app:layout_constraintEnd_toStartOf="@id/guideline57"
        app:layout_constraintStart_toEndOf="@id/guideline56"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

    </LinearLayout>


    <View
        android:id="@+id/sutoko.account.creation.filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#66000000"
        />

    <ProgressBar
        android:id="@+id/sutoko.account.creation.filter.progressbar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline56"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline57"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline58"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline59"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>