<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#02FFFFFF"
    android:paddingBottom="24dp"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/sutoko.storychapters.item.locked_chapter.number.text"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/background_circle_stroke_only"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.storychapters.item.locked_chapter.patron.1"
        app:layout_constraintEnd_toEndOf="@id/sutoko.storychapters.item.locked_chapter.patron.1"
        app:layout_constraintStart_toStartOf="@id/sutoko.storychapters.item.locked_chapter.patron.1"
        app:layout_constraintTop_toTopOf="@id/sutoko.storychapters.item.locked_chapter.patron.1" />


    <LinearLayout
        android:id="@+id/sutoko.storychapters.item.locked_chapter.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.storychapters.item.locked_chapter.number.text"
        app:layout_constraintStart_toEndOf="@id/sutoko.storychapters.item.locked_chapter.patron.1"
        app:layout_constraintTop_toTopOf="@id/sutoko.storychapters.item.locked_chapter.number.text">

        <ImageView
            android:id="@+id/sutoko.storychapters.item.locked_chapter.title.icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            tools:ignore="ContentDescription" />

        <com.example.sutokosharedelements.fonts.WorkSansSemiBold
            android:id="@+id/sutoko.storychapters.item.locked_chapter.title.text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <com.example.sutokosharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.storychapters.item.locked_chapter.description.text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="3dp"
        android:textColor="#94FFFFFF"
        android:textSize="14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sutoko.storychapters.item.locked_chapter.number.text"
        app:layout_constraintWidth_max="400dp"
        tools:ignore="UnusedAttribute" />

    <View
        android:id="@+id/sutoko.storychapters.item.locked_chapter.patron.1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toStartOf="@id/guideline131"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_max="100dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline131"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.175" />

</androidx.constraintlayout.widget.ConstraintLayout>