<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="62dp">

    <FrameLayout
        android:id="@+id/sutoko_item_community_toolbox_button_authors_rank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/guideline146"
        app:layout_constraintTop_toTopOf="parent"
         >
        <ImageView
            android:id="@+id/sutoko.item.community_toolbox.icon.rank"
            android:layout_gravity="center"
            android:layout_width="22dp"
            android:layout_height="22dp"
            tools:ignore="ContentDescription"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/sutoko_item_community_toolbox_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline145"
        app:layout_constraintEnd_toStartOf="@id/sutoko_item_community_toolbox_button_authors_rank"
        android:background="@drawable/background_rounded_vsoft_white_community_toolbar"
        android:orientation="horizontal"
        android:layout_marginEnd="12dp"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/sutoko.item.community_toolbox.button.back"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp">

            <ImageView
                android:id="@+id/sutoko.item.community_toolbox.icon.back"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="false"
                />
        </FrameLayout>

        <EditText
            android:id="@+id/sutoko_item_community_toolbox_search_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="@null"
            android:textSize="12sp"
            android:inputType="text|textNoSuggestions"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:hint="@string/sutoko_community_toolbox_search_hint"
            />

        <FrameLayout
            android:layout_width="36dp"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/sutoko.item.community_toolbox.icon.search"
                android:layout_width="22dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                tools:ignore="ContentDescription" />
            <ProgressBar
                android:id="@+id/sutoko.item.community_toolbox.progressbar.search"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                />
        </FrameLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline145"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.035"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline146"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.965" />
</androidx.constraintlayout.widget.ConstraintLayout>