<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_ssimplestorypreview_text_background"
    tools:viewBindingIgnore="true">

    <View
        android:id="@+id/sutoko.simplestorypreview.rank.central_guideline"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:alpha="0.1"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.sutokosharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.simplestorypreview.rank.title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="@string/sutoko_title_community"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.example.sutokosharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.simplestorypreview.rank.score.wrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="10dp"
        android:includeFontPadding="false"
        android:text="70"
        android:textColor="#fb98bf"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@id/sutoko.simplestorypreview.rank.central_guideline"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.title" />

    <com.example.sutokosharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.simplestorypreview.rank.right.score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="26dp"
        android:includeFontPadding="false"
        android:text="70"
        android:textColor="#9ed8fc"
        android:textSize="28sp"
        app:layout_constraintEnd_toStartOf="@id/sutoko.simplestorypreview.rank.central_guideline"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.title" />

    <View
        android:id="@+id/sutoko.simplestorypreview.rank.score.wrong.bar"
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sutoko_simplestorypreview_rank_bar_pink"
        app:layout_constraintStart_toStartOf="@id/sutoko.simplestorypreview.rank.score.wrong"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.score.wrong" />

    <View
        android:id="@+id/sutoko.simplestorypreview.rank.score.right.bar"
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/sutoko_simplestorypreview_rank_bar_blue"
        app:layout_constraintEnd_toEndOf="@id/sutoko.simplestorypreview.rank.right.score"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.right.score" />

    <View
        android:id="@+id/sutoko.simplestorypreview.rank.score.bar"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@id/sutoko.simplestorypreview.rank.right.score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.right.score" />

    <com.example.sutokosharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.simplestorypreview.rank.score.wrong.label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/sutoko_simplestorypreview_rank_wrong_label"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@id/sutoko.simplestorypreview.rank.score.wrong"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.score.wrong.bar" />

    <com.example.sutokosharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.simplestorypreview.rank.score.right.label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/sutoko_simplestorypreview_rank_right_label"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/sutoko.simplestorypreview.rank.right.score"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.score.right.bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.simplestorypreview.rank.score.wrong.bar"
        app:layout_constraintEnd_toEndOf="@id/sutoko.simplestorypreview.rank.central_guideline"
        app:layout_constraintStart_toStartOf="@id/sutoko.simplestorypreview.rank.central_guideline"
        app:layout_constraintTop_toTopOf="@id/sutoko.simplestorypreview.rank.score.wrong.bar"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/sutoko.simplestorypreview.rank.bottom.patron"
        android:layout_width="1dp"
        android:layout_height="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sutoko.simplestorypreview.rank.score.wrong.label" />

    <ImageView
        android:id="@+id/sutoko.simplestorypreview.rank.icon.user"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:alpha="0.55"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.simplestorypreview.rank.right.score"
        app:layout_constraintEnd_toEndOf="@id/sutoko.simplestorypreview.rank.central_guideline"
        app:layout_constraintStart_toStartOf="@id/sutoko.simplestorypreview.rank.central_guideline"
        app:layout_constraintTop_toTopOf="@id/sutoko.simplestorypreview.rank.right.score"

        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>