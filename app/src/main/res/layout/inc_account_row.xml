<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
    tools:viewBindingIgnore="true"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


    <ImageView
            android:id="@+id/sutoko.account.row.icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="ContentDescription"/>


    <com.example.sharedelements.fonts.RobotoBold
            android:id="@+id/sutoko.account.row.text.title"
            app:layout_constraintTop_toTopOf="@id/sutoko.account.row.icon"
            app:layout_constraintBottom_toBottomOf="@id/sutoko.account.row.icon"
            app:layout_constraintStart_toEndOf="@id/sutoko.guideline22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:letterSpacing="0.05"
    />

    <com.example.sharedelements.fonts.RobotoRegular
            android:id="@+id/sutoko.account.row.text.description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/sutoko.guideline23"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/sutoko.account.row.text.title"
            app:layout_constraintHorizontal_bias="0.05"
            android:letterSpacing="0.06"
            android:lineSpacingExtra="3dp"
            android:textSize="13sp"
            android:textColor="#8D8D8D"
    />


    <View
            android:id="@+id/sutoko.account.row.button.hitbox"
            android:layout_width="0dp" android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H, 131:56"
            app:layout_constraintBottom_toBottomOf="@id/sutoko.account.row.text.description"
            app:layout_constraintTop_toTopOf="@id/sutoko.account.row.text.title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/sutoko.guideline26"
            android:background="@drawable/background_button_pink"
            android:foreground="@drawable/selectable_item_background_rounded"
            app:layout_constraintVertical_bias="0.8"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:ignore="UnusedAttribute"/>


    <com.example.sharedelements.fonts.RobotoRegular
            android:id="@+id/sutoko.account.row.button.text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/sutoko.account.row.button.hitbox"
            app:layout_constraintBottom_toBottomOf="@id/sutoko.account.row.button.hitbox"
            app:layout_constraintStart_toStartOf="@id/sutoko.account.row.button.hitbox"
            app:layout_constraintEnd_toEndOf="@id/sutoko.account.row.button.hitbox"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
    />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/sutoko.guideline22" app:layout_constraintGuide_percent="0.11"
            android:orientation="vertical"/>


    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/sutoko.guideline23" app:layout_constraintGuide_percent="0.7"
            android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/sutoko.guideline26" app:layout_constraintGuide_percent="0.73"
            android:orientation="vertical"/>


</androidx.constraintlayout.widget.ConstraintLayout>