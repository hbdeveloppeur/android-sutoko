<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#02FFFFFF"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    tools:viewBindingIgnore="true">

    <TextView
        android:id="@+id/sutoko.storychapters.item.unavailable_chapter.number.text"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/background_circle_stroke_only"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1"
        app:layout_constraintEnd_toEndOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1"
        app:layout_constraintStart_toStartOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1"
        app:layout_constraintTop_toTopOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1" />

    <com.example.sharedelements.fonts.WorkSansSemiBold
        android:id="@+id/sutoko.storychapters.item.unavailable_chapter.title.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:includeFontPadding="false"
        android:text="Chapitre 2"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.2"
        app:layout_constraintStart_toEndOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1" />


    <com.example.sharedelements.fonts.WorkSansRegular
        android:id="@+id/sutoko.storychapters.item.unavailable_chapter.subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="8dp"
        android:textColor="#bedbfc"
        android:textSize="14sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/guideline142"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1"
        app:layout_constraintTop_toBottomOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.2" />

    <View
        android:id="@+id/sutoko.storychapters.item.unavailable_chapter.patron.1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toStartOf="@id/guideline133"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_max="100dp" />

    <View
        android:id="@+id/sutoko.storychapters.item.unavailable_chapter.patron.2"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1"
        app:layout_constraintStart_toEndOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1"
        app:layout_constraintTop_toTopOf="@id/sutoko.storychapters.item.unavailable_chapter.patron.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline133"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.175" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline142"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>