<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/sutoko_item_calendar_cardview"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:cardBackgroundColor="#11FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/sutoko_item_calendar_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>


    <com.example.sharedelements.fonts.WorkSansLight
        android:id="@+id/sutoko_item_calendar_info_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="L'Homme Clown"
        app:layout_constraintStart_toEndOf="@id/guideline74"
        app:layout_constraintBottom_toTopOf="@id/guideline141"
        />

    <com.example.sharedelements.fonts.WorkSansSemiBold
        android:id="@+id/sutoko_item_calendar_info_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="Chap. 8 ðŸ’¬"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/sutoko_item_calendar_info_subtitle"
        app:layout_constraintBottom_toTopOf="@id/guideline141"
        />

    <com.example.sharedelements.fonts.WorkSansSemiBold
        android:id="@+id/sutoko_item_calendar_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Mercredi Ã  18:00"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toEndOf="@id/guideline74"
        app:layout_constraintBottom_toTopOf="@id/sutoko_item_calendar_info_subtitle"
        />



    <ImageView
        android:id="@+id/sutoko_item_calendar_event_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/sutoko_item_calendar_info_title"
        app:layout_constraintStart_toEndOf="@id/guideline74"
        app:layout_constraintTop_toBottomOf="@id/guideline140"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="ContentDescription" />

    <com.example.sharedelements.fonts.WorkSansLight
        android:id="@+id/sutoko_item_calendar_event_icon_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sutoko_item_calendar_event_icon"
        app:layout_constraintBottom_toBottomOf="@id/sutoko_item_calendar_event_icon"
        app:layout_constraintStart_toEndOf="@id/sutoko_item_calendar_event_icon"
        android:layout_marginStart="6dp"
        android:textSize="12sp"
        android:textColor="#E1E1E1"
        android:text="Attendu par \n50000 joueurs"
        />

    <LinearLayout
        android:id="@+id/sutoko_item_calendar_event_keywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sutoko_item_calendar_cardview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline74"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline138"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <View
        android:id="@+id/guideline140"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintDimensionRatio="10:8"
        app:layout_constraintEnd_toStartOf="@id/guideline74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/guideline141"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintDimensionRatio="10:8"
        app:layout_constraintEnd_toStartOf="@id/guideline74"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/sutoko_item_calendar_cardview"/>
</androidx.constraintlayout.widget.ConstraintLayout>