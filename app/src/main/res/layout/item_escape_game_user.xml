<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="#161616"
        >
        <ImageView
            android:id="@+id/item.escape_game.bg.images.stars"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:adjustViewBounds="true"
            android:alpha="0.25"
            />
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/item.escape_game.rank.icon.crown.image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        />

    <com.example.sharedelements.fonts.NunitoRegular
        android:id="@+id/item.escape_game.rank.username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item.escape_game.rank.icon.crown.image"
        android:layout_marginStart="18dp"
        android:textColor="@color/white"
        android:includeFontPadding="false"
        android:text="HocineHope"
        />

    <com.example.sharedelements.fonts.NunitoRegular
        android:id="@+id/item.escape_game.rank.slashes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item.escape_game.rank.username"
        android:layout_marginStart="9dp"
        android:textSize="16sp"
        android:textColor="#22FFFFFF"
        android:text="//"
        android:includeFontPadding="false"
        />

    <com.example.sharedelements.fonts.NunitoRegular
        android:id="@+id/item.escape_game.rank.clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item.escape_game.rank.slashes"
        android:layout_marginStart="9dp"
        android:textSize="12sp"
        android:textColor="#FFF"
        android:text="18:30"
        android:includeFontPadding="false"
        />

    <com.example.sharedelements.fonts.NunitoRegular
        android:id="@+id/item.escape_game.rank.top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:textSize="11sp"
        android:textColor="#FFF"
        android:gravity="center"
        android:text="Top 1"
        android:textAllCaps="true"
        android:includeFontPadding="false"
        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingTop="4dp"
        android:paddingBottom="3dp"
        android:background="@drawable/background_rounded_top_escape_game"
        />



</androidx.constraintlayout.widget.ConstraintLayout>